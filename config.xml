<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pleromalabs.gnosis" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:cocoon="http://cocoon.io/ns/1.0">
    <name>Gnosis</name>
    <description>
      A mobile client for the gnosis learning system
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="landscape"/>
    <preference name="Fullscreen" value="true"/>
    <preference name="DisallowOverscroll" value="true" />
    <cocoon:plugin name="com.ludei.webviewplus.ios"/>
    <cocoon:plugin name="com.ludei.webviewplus.android"/>
</widget>
